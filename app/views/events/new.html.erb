<div class="container">
  <div class="row justify-content-md-center mt-3">
    <div class="col-md-9">
      <h2><%= link_to contacts_path, class: "text-reset" do %>Contacts<% end %> > Create</h2>
      <%= simple_form_for [@contact, @event] do |f| %>
          <%= f.error_notification %>
          <%= f.input :note %>
          <%= f.input :type_id, collection: Type.all.order(id: :asc), selected: 3 %>
          <%= f.button :submit, class: "btn-primary" %>
          <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
      <% end %>

    </div>
  </div>
</div>
